{
  "typescript.tsdk": "node_modules/typescript/lib",
  "lit-plugin.strict": true,
  "editor.rulers": [140],
  "cSpell.words": [
    "inputmode",
    "maxlength",
    "Noto",
    "optimizelegibility",
    "zushar"
  ],
  "cSpell.ignoreWords": [
    "wdth"
  ],
  "editor.codeActionsOnSave": {
    "source.organizeImports": "never",
    "source.fixAll": "explicit"
  },
  "editor.formatOnSave": true
}
